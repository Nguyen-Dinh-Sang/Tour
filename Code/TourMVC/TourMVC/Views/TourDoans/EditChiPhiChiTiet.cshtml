@model TourMVC.Models.TourChiPhiChiTiet

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Chỉnh Sửa</h1>

<h4>Chi Phí</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditChiPhiChiTiet">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ChiPhiChiTietId" />
            <div class="form-group">
                <label class="control-label">Đoàn</label>
                <input class="form-control" value="@ViewBag.DoanId" readonly />
            </div>
            <div class="form-group">
                <label class="control-label">Loại Chi Phí</label>
                <input class="form-control" value="@ViewBag.LoaiChiPhiId" readonly />
            </div>
            <div class="form-group">
                <label asp-for="ChiPhi" class="control-label"></label>
                <input asp-for="ChiPhi" class="form-control" />
                <span asp-validation-for="ChiPhi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgayTao" class="control-label"></label>
                <input asp-for="NgayTao" class="form-control" readonly/>
                <span asp-validation-for="NgayTao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu Lại" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id="@Model.DoanId">Trở Lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
