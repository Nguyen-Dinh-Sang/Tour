    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Doan)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Doan.DoanTen)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LoaiChiPhi)
        </dt>
        <dd class="col-sm-10">
