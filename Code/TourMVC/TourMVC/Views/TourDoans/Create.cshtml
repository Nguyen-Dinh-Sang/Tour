@model TourMVC.Models.TourDoan

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Thêm Mới</h1>

<h4>Đoàn Du Lịch</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DoanTen" class="control-label"></label>
                <input asp-for="DoanTen" class="form-control" />
                <span asp-validation-for="DoanTen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoanChiTiet" class="control-label"></label>
                <input asp-for="DoanChiTiet" class="form-control" />
                <span asp-validation-for="DoanChiTiet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoanNgayDi" class="control-label"></label>
                <input asp-for="DoanNgayDi" class="form-control" onchange="batngaydilai()" />
                <span asp-validation-for="DoanNgayDi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DoanNgayVe" class="control-label"></label>
                <input asp-for="DoanNgayVe"  class="form-control" onchange="batnolai()" />
                <span asp-validation-for="DoanNgayVe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TourId" class="control-label"></label>
                <select asp-for="TourId" id="changeDoanTourId" class="form-control" asp-items="ViewBag.TourId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DoanGiaTour" class="control-label"></label>
                <input asp-for="DoanGiaTour" id="changeDoanGiaTour" class="form-control" value="0" readonly/>
                <span asp-validation-for="DoanGiaTour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm Mới" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Trở Về</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
