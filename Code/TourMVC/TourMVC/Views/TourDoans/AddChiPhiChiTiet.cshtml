@model TourMVC.Models.TourChiPhiChiTiet

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Thêm Mới</h1>

<h4>Chi Phí</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddChiPhiChiTiet">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Đoàn</label>
                <input class="form-control" value="@ViewBag.DoanId" readonly />
            </div>
            <div class="form-group">
                <label asp-for="LoaiChiPhiId" class="control-label"></label>
                <select asp-for="LoaiChiPhiId" class ="form-control" asp-items="ViewBag.LoaiChiPhiId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ChiPhi" class="control-label"></label>
                <input asp-for="ChiPhi" class="form-control" />
                <span asp-validation-for="ChiPhi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm Mới" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id="@Model.DoanId">Trở Về</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
