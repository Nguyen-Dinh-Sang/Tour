@model IEnumerable<TourMVC.Models.ThongKeDoan>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h1>Doanh Thu Tour @ViewBag.Tour</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DoanTen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoLuongKhach)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GiaTien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TongDoanhThu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TongChiPhi)
            </th>
            <th>
                Tổng Lợi Nhuận
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DoanTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoLuongKhach)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GiaTien)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TongDoanhThu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TongChiPhi)
                </td>
                @{
                    var loiNhuan = item.TongDoanhThu - item.TongChiPhi;
                    if (loiNhuan <= 0)
                    {
                        <td style="color:red;">@loiNhuan</td>
                    }
                    else
                    {
                        <td>@loiNhuan</td>
                    }
                }
                <td>
                    <a asp-action="DetailsDoan" asp-route-id="@item.DoanId">Chi Tiết</a>
                </td>
            </tr>
        }
    <tr>
        <td style="color:red;">
            Tổng
        </td>
        <td style="color:red;">
            @ViewBag.TongSoKhach
        </td>
        <td></td>
        <td style="color:red;">
            @ViewBag.TongDoanhThu
        </td>
        <td style="color:red;">
            @ViewBag.TongChiPhi
        </td>
        <td style="color:red;">
            @ViewBag.TongLoiNhuan
        </td>
    </tr>
    </tbody>
</table>
<div>
    <a asp-action="Index">Trở Về</a>
</div>
