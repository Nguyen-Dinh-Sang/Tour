@model IEnumerable<TourMVC.Models.TourLoaiChiPhi>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Dách Sách Loại Chi Phí</h1>

<p>
    <a asp-action="Create">Thêm Loại Chi Phí Mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LoaiChiPhiTen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoaiChiPhiMoTa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayTao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiChiPhiTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiChiPhiMoTa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayTao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LoaiChiPhiId">Chỉnh Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.LoaiChiPhiId">Chi Tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.LoaiChiPhiId">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
