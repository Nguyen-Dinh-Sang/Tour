@model TourMVC.Models.GiaTourHienTai

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Chỉnh Sửa</h1>

<h4>Giá Tour Hiện Tại</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TourId" />
            <div class="form-group">
                <label class="control-label">Tour</label>
                <input class="form-control" value="@ViewBag.TourId" readonly />
                <input type="hidden" class="form-control" id="changeSalary" value="@ViewBag.editTourId" readonly />
            </div>
            <div class="form-group">
                <label asp-for="GiaId" class="control-label"></label>
                <div id="result">
                    <select asp-for="GiaId" class="form-control" asp-items="ViewBag.GiaId"></select>
                </div>
                <span asp-validation-for="GiaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgayTao" class="control-label"></label>
                <input asp-for="NgayTao" class="form-control" readonly />
                <span asp-validation-for="NgayTao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu Lại" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Trở Về</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
