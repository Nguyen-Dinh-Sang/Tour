@model IEnumerable<TourMVC.Models.Tour>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Danh sách Tour</h1>
@using (Html.BeginForm("Index", "Tours", FormMethod.Get))
{
    <p>

        Classify:
        <select id="classify" name="classify">
            <option>Tên tour</option>
            <option>Mô tả tour</option>
            <option>Loại tour</option>
        </select>
        Title: @Html.TextBox("SearchString") <input type="submit" value="Tìm kiếm" />
    </p>
}
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TourTen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TourMoTa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayTao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Loai)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TourTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TourMoTa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayTao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Loai.LoaiMoTa)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TourId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.TourId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.TourId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@{
    double totalPages = ViewBag.TotalPages;
    int PageNumber = ViewBag.PageNumber;
    <div class="pagination" style="float:left">
        @if (totalPages != 0)
        {
            @if (PageNumber > 1)
            {
                @Html.ActionLink("<<<", "Index", new { searchString = ViewBag.searchString, classify = ViewBag.classify, PageNumber = PageNumber - 1 })
            }
            <label>@PageNumber</label>
            @if (PageNumber != totalPages)
            {
                @Html.ActionLink(">>>", "Index", new { searchString = ViewBag.searchString, classify = ViewBag.classify, PageNumber = PageNumber + 1 })
            }
        }

    </div>

}